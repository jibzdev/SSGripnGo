<section class="pt-32 pb-20 bg-ssgrip-darkest min-h-screen">
  <div class="max-w-4xl mx-auto px-6 space-y-10">
    <!-- Header -->
    <div class="text-center space-y-4">
      <p class="text-xs uppercase tracking-[0.4em] text-ssgrip-silver/60">Verification Required</p>
      <h1 class="text-4xl md:text-5xl font-black text-white">Confirm Your Email</h1>
      <p class="text-ssgrip-silver max-w-2xl mx-auto">
        We've sent a verification link to <span class="font-semibold text-white"><%= @user&.email || 'your email' %></span>. 
        Check your inbox and click the link to activate your account.
      </p>
    </div>

    <!-- Flash Messages -->
    <% flash.each do |type, message| %>
      <% next if message.blank? %>
      <% is_alert = %w[alert error].include?(type.to_s) %>
      <div class="rounded-2xl border px-6 py-4 text-sm text-center font-medium <%= is_alert ? 'border-red-500/30 bg-red-500/10 text-red-200' : 'border-emerald-400/30 bg-emerald-400/10 text-emerald-200' %>">
        <%= message %>
      </div>
    <% end %>

    <!-- Main Card -->
    <div class="bg-ssgrip-darker/50 border border-ssgrip-silver/10 rounded-3xl p-8 md:p-10 shadow-2xl shadow-black/30">
      <div class="grid md:grid-cols-2 gap-10">
        <!-- Steps -->
        <div class="space-y-6">
          <div>
            <p class="text-xs uppercase tracking-[0.3em] text-ssgrip-silver/60 mb-3">How it works</p>
            <h2 class="text-2xl font-bold text-white">Three quick steps</h2>
          </div>

          <div class="space-y-4">
            <div class="flex gap-4 items-start">
              <div class="w-10 h-10 rounded-full bg-ssgrip-accent/20 border border-ssgrip-accent/30 flex items-center justify-center text-ssgrip-accent font-bold text-sm shrink-0">1</div>
              <div>
                <p class="font-semibold text-white">Check your inbox</p>
                <p class="text-sm text-ssgrip-silver">Look for an email from SSGrip8Go with the subject "Verify Your Email".</p>
              </div>
            </div>
            <div class="flex gap-4 items-start">
              <div class="w-10 h-10 rounded-full bg-ssgrip-accent/20 border border-ssgrip-accent/30 flex items-center justify-center text-ssgrip-accent font-bold text-sm shrink-0">2</div>
              <div>
                <p class="font-semibold text-white">Click the verification link</p>
                <p class="text-sm text-ssgrip-silver">The secure link confirms your email and activates your account.</p>
              </div>
            </div>
            <div class="flex gap-4 items-start">
              <div class="w-10 h-10 rounded-full bg-ssgrip-accent/20 border border-ssgrip-accent/30 flex items-center justify-center text-ssgrip-accent font-bold text-sm shrink-0">3</div>
              <div>
                <p class="font-semibold text-white">Access your dashboard</p>
                <p class="text-sm text-ssgrip-silver">You'll be redirected to your dashboard with full account access.</p>
              </div>
            </div>
          </div>

          <div class="pt-4 border-t border-ssgrip-silver/10">
            <p class="text-xs text-ssgrip-silver-dark">
              <svg class="w-4 h-4 inline-block mr-1 text-ssgrip-silver/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
              The verification link expires in 24 hours for security.
            </p>
          </div>
        </div>

        <!-- Actions -->
        <div class="space-y-6">
          <div class="bg-ssgrip-darkest/50 border border-ssgrip-silver/10 rounded-2xl p-6">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 rounded-full bg-ssgrip-silver/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <p class="text-xs uppercase tracking-[0.2em] text-ssgrip-silver/60">Didn't receive it?</p>
                <p class="font-semibold text-white">Resend verification email</p>
              </div>
            </div>

            <p class="text-sm text-ssgrip-silver mb-5">
              We'll send another verification link to your email. Check your spam folder if you don't see it.
            </p>

            <%= form_with url: resend_verification_email_path, method: :post, local: true do %>
              <button type="submit" class="w-full inline-flex items-center justify-center gap-2 px-6 py-3 rounded-xl bg-white text-ssgrip-darkest font-semibold hover:bg-ssgrip-accent transition-all group">
                <svg class="w-4 h-4 group-hover:rotate-180 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                </svg>
                <span>Resend Email</span>
              </button>
            <% end %>

            <% if @user&.verification_sent_at && Time.current < @user.verification_sent_at + 2.minutes %>
              <% time_left = ((@user.verification_sent_at + 2.minutes) - Time.current).ceil %>
              <div class="mt-4 rounded-xl border border-ssgrip-silver/20 bg-ssgrip-silver/5 px-4 py-3 text-sm text-ssgrip-silver flex items-center gap-2">
                <svg class="w-4 h-4 text-ssgrip-silver/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span>You can request another email in <span class="font-semibold text-white"><%= time_left %>s</span></span>
              </div>
            <% end %>
          </div>

          <div class="bg-ssgrip-darkest/30 border border-ssgrip-silver/10 rounded-2xl p-5 space-y-3">
            <p class="text-sm text-ssgrip-silver">
              Wrong email address? Sign out and register again with the correct one.
            </p>
            <%= link_to logout_path, class: "inline-flex items-center gap-2 text-sm font-semibold text-white hover:text-ssgrip-accent transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
              <span>Sign out and try again</span>
            <% end %>
          </div>

          <div class="text-center">
            <p class="text-xs text-ssgrip-silver-dark">
              Still having trouble? Contact us at <a href="mailto:support@ssgrip8go.com" class="text-ssgrip-silver hover:text-white transition-colors">support@ssgrip8go.com</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
