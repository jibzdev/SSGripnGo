<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= @register_seo&.title || @general_setting.application_name %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Boxicons for icons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    
    <link rel="icon" type="image/png" href="/assets/images/logo3.png">
</head>
<body class="bg-ssgrip-darkest text-white font-sans overflow-hidden h-screen w-screen">
    <!-- Background with gradient overlay -->
    <div class="fixed inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-br from-ssgrip-darkest via-ssgrip-darker to-ssgrip-dark"></div>
        
        <!-- Animated grid background -->
        <div class="absolute inset-0 opacity-10">
            <div class="absolute inset-0" style="background-image: linear-gradient(rgba(168, 178, 209, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(168, 178, 209, 0.1) 1px, transparent 1px); background-size: 50px 50px;"></div>
        </div>
        
        <!-- Glow effects -->
        <div class="absolute top-1/4 -right-48 w-96 h-96 bg-ssgrip-accent/20 rounded-full blur-[120px] animate-pulse"></div>
        <div class="absolute bottom-1/4 -left-48 w-96 h-96 bg-ssgrip-silver/10 rounded-full blur-[120px] animate-pulse" style="animation-delay: 1s;"></div>
    </div>

    <!-- Main Content -->
    <div class="relative z-10 h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md">
            <!-- Register Card -->
            <div class="relative bg-ssgrip-darker/60 backdrop-blur-2xl border border-ssgrip-silver/10 rounded-xl p-8 shadow-2xl">
                
                <!-- Header -->
                <div class="mb-8">
                    <h1 class="text-3xl font-black text-white mb-2">Create Account</h1>
                    <p class="text-ssgrip-silver text-sm">Join SSGrip8o and start shopping</p>
                </div>

                <!-- Register Form -->
                <%= form_with url: register_path, method: :post, local: true, class: "space-y-5" do |form| %>
                    <%= form.hidden_field :authenticity_token, value: form_authenticity_token %>
                    
                    <!-- Username Field -->
                    <div>
                        <%= form.label :user_username, "Username", class: "block text-sm font-medium text-white mb-2" %>
                        <%= form.text_field "user[username]", 
                            required: true, 
                            placeholder: "your_username", 
                            class: "w-full px-4 py-3 bg-ssgrip-darkest/50 border border-ssgrip-silver/20 rounded-lg text-white placeholder-ssgrip-silver-dark focus:outline-none focus:ring-1 focus:ring-white focus:border-white transition-all" %>
                    </div>

                    <!-- Email Field -->
                    <div>
                        <%= form.label :user_email, "Email", class: "block text-sm font-medium text-white mb-2" %>
                        <%= form.email_field "user[email]", 
                            required: true, 
                            placeholder: "you@example.com", 
                            class: "w-full px-4 py-3 bg-ssgrip-darkest/50 border border-ssgrip-silver/20 rounded-lg text-white placeholder-ssgrip-silver-dark focus:outline-none focus:ring-1 focus:ring-white focus:border-white transition-all" %>
                    </div>

                    <!-- Password Field -->
                    <div>
                        <%= form.label :user_password, "Password", class: "block text-sm font-medium text-white mb-2" %>
                        <%= form.password_field "user[password]", 
                            required: true, 
                            placeholder: "Enter your password", 
                            class: "w-full px-4 py-3 bg-ssgrip-darkest/50 border border-ssgrip-silver/20 rounded-lg text-white placeholder-ssgrip-silver-dark focus:outline-none focus:ring-1 focus:ring-white focus:border-white transition-all" %>
                    </div>

                    <!-- Password Confirmation Field -->
                    <div>
                        <%= form.label :user_password_confirmation, "Confirm Password", class: "block text-sm font-medium text-white mb-2" %>
                        <%= form.password_field "user[password_confirmation]", 
                            required: true, 
                            placeholder: "Confirm your password", 
                            class: "w-full px-4 py-3 bg-ssgrip-darkest/50 border border-ssgrip-silver/20 rounded-lg text-white placeholder-ssgrip-silver-dark focus:outline-none focus:ring-1 focus:ring-white focus:border-white transition-all" %>
                    </div>

                    <!-- Submit Button -->
                    <div>
                        <%= form.submit "Create Account", 
                            class: "w-full bg-white text-ssgrip-darkest font-semibold py-3.5 px-6 rounded-lg transition-all duration-200 hover:bg-ssgrip-accent hover:scale-[1.02] active:scale-[0.98] text-sm", 
                            data: { turbo: false } %>
                    </div>
                <% end %>

                <!-- Divider -->
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-ssgrip-silver/10"></div>
                    </div>
                    <div class="relative flex justify-center text-xs">
                        <span class="px-3 bg-ssgrip-darker/60 text-ssgrip-silver-dark">OR</span>
                    </div>
                </div>

                <!-- Google Sign In Button -->
                <a href="<%= google_auth_path %>" 
                   class="w-full flex items-center justify-center gap-3 px-4 py-3 bg-ssgrip-base/30 hover:bg-ssgrip-base/50 border border-ssgrip-silver/20 rounded-lg text-white transition-all duration-200 hover:border-ssgrip-silver/40 group">
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                    </svg>
                    <span class="text-sm font-medium">Continue with Google</span>
                </a>

                <!-- Login Link -->
                <div class="text-center mt-6">
                    <span class="text-sm text-ssgrip-silver">Already have an account? </span>
                    <a href="<%= login_path %>" 
                       class="text-sm font-medium text-white hover:text-ssgrip-accent transition-colors">
                        Sign in
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast Notifications -->
    <%= render 'layouts/toast' if defined?(render) %>
</body>
</html>
