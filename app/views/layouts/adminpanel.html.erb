<!DOCTYPE html>
<html>
  <head>
    <title><%= @general_setting&.application_name || 'SSGrip' %> | Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_importmap_tags %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "dashboard", "data-turbo-track": "reload" %>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdn.jsdelivr.net/npm/@iconify/iconify@3.1.1/dist/iconify.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
      var darkMode = localStorage.getItem('darkMode');
      if (darkMode) {
        document.documentElement.classList.add('dark');
      }
    </script>
    <style>
      ::-webkit-scrollbar {
        width: 6px;
        height: 8px;
      }

      ::-webkit-scrollbar-track {
        background: #f1f1f1;
      }

      .dark ::-webkit-scrollbar-track {
        background: #3b3b3b;
      }

      ::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 6px;
        transition: ease-in-out all .4s;
      }

      .dark ::-webkit-scrollbar-thumb {
        background: #292929;
        border-radius: 6px;
        transition: ease-in-out all .4s;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: #a1a1a1;
      }

      .dark ::-webkit-scrollbar-thumb:hover {
        background: #161616;
      }
      
      #drawerBackdrop {
        background-color: rgba(0, 0, 0, 0.5);
      }

      #sidebarBackdrop {
        background-color: rgba(0, 0, 0, 0.5);
        transition: opacity 0.3s ease;
      }
    </style>
  </head>
  <body class="overflow-hidden bg-ssgrip-darkest" style="user-select: none; -webkit-user-select: none; -webkit-user-drag: none;">
  <div class="h-screen flex flex-col lg:flex-row bg-ssgrip-darkest">
    <div id="sidebarBackdrop" class="fixed z-20 inset-0 bg-black opacity-0 transition-opacity lg:hidden hidden"></div>
    <!-- Sidebar -->
    <div id="sidebar" class="fixed z-30 inset-y-0 left-0 w-64 min-w-64 transition-all duration-300 transform bg-ssgrip-darkest lg:translate-x-0 lg:static lg:inset-0 -translate-x-full border-r border-ssgrip-silver/5 flex flex-col h-screen">
      <div class="flex flex-col h-full">
        <!-- Logo Section -->
        <div class="flex items-center h-16 px-6 border-b border-ssgrip-silver/5">
          <%= link_to admin_overview_path, class: "group", "data-turbo": "false" do %>
            <img src="/assets/images/logo.png" alt="SSGrip8o" class="h-8 w-auto object-contain group-hover:opacity-80 transition-opacity">
          <% end %>
          <div class="ml-auto">
            <span class="text-[10px] uppercase tracking-widest text-ssgrip-accent font-bold">Admin</span>
          </div>
        </div>

        <nav class="px-4 flex-1 overflow-y-auto py-6">
          <!-- Dashboard Section -->
          <div class="mb-6">
            <div class="mb-3 px-2">
              <h2 class="text-[11px] font-bold text-ssgrip-silver-dark uppercase tracking-widest">
                Dashboard
              </h2>
            </div>
            <div class="space-y-1">
              <%= link_to admin_overview_path, class: "flex items-center gap-3 #{request.path == admin_overview_path ? 'text-white bg-ssgrip-silver/5' : 'text-ssgrip-silver'} px-3 py-2 rounded-lg text-sm font-medium hover:bg-ssgrip-silver/5 hover:text-white transition-all", "data-turbo": "false" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                </svg>
                <span>Overview</span>
              <% end %>
            </div>
          </div>

          <!-- Management Section -->
          <div class="mb-6">
            <div class="mb-3 px-2">
              <h2 class="text-[11px] font-bold text-ssgrip-silver-dark uppercase tracking-widest">
                Management
              </h2>
            </div>
            <div class="space-y-1">
              <%= link_to admin_users_path, class: "flex items-center gap-3 #{request.path.start_with?('/admin/users') ? 'text-white bg-ssgrip-silver/5' : 'text-ssgrip-silver'} px-3 py-2 rounded-lg text-sm font-medium hover:bg-ssgrip-silver/5 hover:text-white transition-all", "data-turbo": "false" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z"/>
                </svg>
                <span>Users</span>
              <% end %>

              <%= link_to admin_orders_path, class: "flex items-center gap-3 #{request.path.start_with?('/admin/orders') ? 'text-white bg-ssgrip-silver/5' : 'text-ssgrip-silver'} px-3 py-2 rounded-lg text-sm font-medium hover:bg-ssgrip-silver/5 hover:text-white transition-all", "data-turbo": "false" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z"/>
                </svg>
                <span>Orders</span>
              <% end %>

              <%= link_to admin_products_path, class: "flex items-center gap-3 #{request.path.start_with?('/admin/products') ? 'text-white bg-ssgrip-silver/5' : 'text-ssgrip-silver'} px-3 py-2 rounded-lg text-sm font-medium hover:bg-ssgrip-silver/5 hover:text-white transition-all", "data-turbo": "false" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 7.5l-9-5.25L3 7.5m18 0l-9 5.25m9-5.25v9l-9 5.25M3 7.5l9 5.25M3 7.5v9l9 5.25m0-9v9"/>
                </svg>
                <span>Products</span>
              <% end %>

              <%= link_to admin_categories_path, class: "flex items-center gap-3 #{request.path.start_with?('/admin/categories') ? 'text-white bg-ssgrip-silver/5' : 'text-ssgrip-silver'} px-3 py-2 rounded-lg text-sm font-medium hover:bg-ssgrip-silver/5 hover:text-white transition-all", "data-turbo": "false" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z"/>
                </svg>
                <span>Categories</span>
              <% end %>

              <%= link_to admin_gallery_index_path, class: "flex items-center gap-3 #{request.path.start_with?('/admin/gallery') ? 'text-white bg-ssgrip-silver/5' : 'text-ssgrip-silver'} px-3 py-2 rounded-lg text-sm font-medium hover:bg-ssgrip-silver/5 hover:text-white transition-all", "data-turbo": "false" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z"/>
                </svg>
                <span>Gallery</span>
              <% end %>

              <%= link_to admin_payments_path, class: "flex items-center gap-3 #{request.path.start_with?('/admin/payments') ? 'text-white bg-ssgrip-silver/5' : 'text-ssgrip-silver'} px-3 py-2 rounded-lg text-sm font-medium hover:bg-ssgrip-silver/5 hover:text-white transition-all", "data-turbo": "false" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z"/>
                </svg>
                <span>Payments</span>
              <% end %>
            </div>
          </div>

          <!-- Configuration Section -->
          <div class="mb-6">
            <div class="mb-3 px-2">
              <h2 class="text-[11px] font-bold text-ssgrip-silver-dark uppercase tracking-widest">
                Configuration
              </h2>
            </div>
            <div class="space-y-1">
              <%= link_to admin_settings_path, class: "flex items-center gap-3 #{request.path.start_with?('/admin/settings') && !request.path.start_with?('/admin/seo_settings') && !request.path.start_with?('/admin/stripe-settings') ? 'text-white bg-ssgrip-silver/5' : 'text-ssgrip-silver'} px-3 py-2 rounded-lg text-sm font-medium hover:bg-ssgrip-silver/5 hover:text-white transition-all", "data-turbo": "false" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span>Settings</span>
              <% end %>

              <%= link_to admin_seo_settings_path, class: "flex items-center gap-3 #{request.path.start_with?('/admin/seo_settings') ? 'text-white bg-ssgrip-silver/5' : 'text-ssgrip-silver'} px-3 py-2 rounded-lg text-sm font-medium hover:bg-ssgrip-silver/5 hover:text-white transition-all", "data-turbo": "false" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"/>
                </svg>
                <span>SEO</span>
              <% end %>

              <%= link_to admin_stripe_settings_path, class: "flex items-center gap-3 #{request.path.start_with?('/admin/stripe-settings') ? 'text-white bg-ssgrip-silver/5' : 'text-ssgrip-silver'} px-3 py-2 rounded-lg text-sm font-medium hover:bg-ssgrip-silver/5 hover:text-white transition-all", "data-turbo": "false" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18.75a60.07 60.07 0 0115.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 013 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 00-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 01-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 003 15h-.75M15 10.5a3 3 0 11-6 0 3 3 0 016 0zm3 0h.008v.008H18V10.5zm-12 0h.008v.008H6V10.5z"/>
                </svg>
                <span>Stripe</span>
              <% end %>
            </div>
          </div>
        </nav>

        <!-- Footer -->
        <div class="mt-auto px-4 py-4 border-t border-ssgrip-silver/5">
          <div class="text-xs text-ssgrip-silver-dark">
            <div class="flex items-center justify-between">
              <span>v1.0.0</span>
              <span class="text-[10px]">Admin</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Main Content -->
    <div class="flex-1 flex flex-col min-h-0">
      <!-- Navbar -->
      <header id="navbar" class="flex justify-between items-center h-16 px-6 bg-ssgrip-darkest/80 backdrop-blur-2xl border-b border-ssgrip-silver/5">
        <div class="flex items-center gap-4">
          <button id="menuToggle" class="text-ssgrip-silver focus:outline-none lg:hidden hover:text-white hover:bg-ssgrip-silver/5 rounded-lg p-2 transition-all duration-200">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
          <%= link_to root_path, class: "text-sm font-medium text-ssgrip-silver hover:text-white transition-colors hidden sm:block" do %>
            <span class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              Back to Store
            </span>
          <% end %>
        </div>

        <div class="flex items-center gap-2">
          <div class="relative" data-controller="user-menu">
            <button type="button"
                    class="flex items-center gap-2 px-3 py-2 rounded-lg text-ssgrip-silver hover:bg-ssgrip-silver/5 transition-all duration-200"
                    data-action="click->user-menu#toggle">
              <div class="w-8 h-8 rounded-full bg-ssgrip-accent/20 flex items-center justify-center border border-ssgrip-accent/30">
                <span class="text-xs font-bold text-ssgrip-accent-bright"><%= current_user.username[0].upcase %></span>
              </div>
              <span class="text-sm font-medium hidden sm:block text-ssgrip-silver"><%= current_user.username %></span>
              <svg class="w-4 h-4 text-ssgrip-silver-dark transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>

            <div class="hidden absolute right-0 mt-3 w-64 bg-ssgrip-darker border border-ssgrip-silver/10 rounded-lg shadow-2xl z-50 overflow-hidden backdrop-blur-xl transform origin-top-right scale-95 opacity-0 transition duration-200"
                 data-user-menu-target="panel">
              <div class="p-4 border-b border-ssgrip-silver/10">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 rounded-lg bg-ssgrip-accent/20 flex items-center justify-center border border-ssgrip-accent/30">
                    <span class="text-sm font-bold text-ssgrip-accent-bright"><%= current_user.username[0].upcase %></span>
                  </div>
                  <div class="flex-1 min-w-0">
                    <h3 class="text-sm font-semibold text-white truncate"><%= current_user.username %></h3>
                    <p class="text-xs text-ssgrip-silver-dark truncate"><%= current_user.email %></p>
                    <div class="flex items-center gap-1.5 mt-1">
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-[10px] font-semibold bg-ssgrip-accent/20 text-ssgrip-accent-bright border border-ssgrip-accent/30">
                        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                        Admin
                      </span>
                    </div>
                  </div>
                </div>
              </div>

              <nav class="py-2 px-2">
                <%= link_to dashboard_path, class: "flex items-center gap-3 px-3 py-2 mb-1 text-sm font-medium text-ssgrip-silver hover:bg-ssgrip-silver/5 hover:text-white rounded-lg transition-all duration-200", "data-turbo": "false" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z"/>
                  </svg>
                  <span>Dashboard</span>
                <% end %>

