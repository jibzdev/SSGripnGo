<% content_for :title, "Payment History" %>

<section class="bg-ssgrip-darkest min-h-screen text-white pb-24">
  <div class="max-w-7xl mx-auto px-6 pt-12">
    <!-- Header Section -->
    <div class="mb-10">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-xs text-ssgrip-silver-dark uppercase tracking-[0.3em] mb-2">Payments</p>
          <h1 class="text-4xl font-black text-white mb-2">Payment History</h1>
          <p class="text-ssgrip-silver">View all your payment transactions and payment status</p>
        </div>
        <div class="hidden sm:flex items-center gap-3">
          <%= link_to dashboard_path, class: "inline-flex items-center gap-2 rounded-lg border border-ssgrip-silver/30 px-5 py-3 text-sm font-semibold text-white hover:border-ssgrip-silver hover:bg-ssgrip-silver/5 transition-all" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            <span>Dashboard</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Payment Summary Cards -->
    <div class="grid grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
      <!-- Successful -->
      <div class="group rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6 hover:border-green-500/30 transition-all">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 rounded-lg bg-green-500/10 border border-green-500/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>
        </div>
        <div class="text-3xl font-black text-white mb-1"><%= @payments.successful.count %></div>
        <div class="text-sm text-ssgrip-silver-dark uppercase tracking-wider">Successful</div>
      </div>

      <!-- Cancelled -->
      <div class="group rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6 hover:border-red-500/30 transition-all">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 rounded-lg bg-red-500/10 border border-red-500/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </div>
        </div>
        <div class="text-3xl font-black text-white mb-1"><%= @payments.cancelled.count %></div>
        <div class="text-sm text-ssgrip-silver-dark uppercase tracking-wider">Cancelled</div>
      </div>

      <!-- Total Spent -->
      <div class="group rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6 col-span-2 lg:col-span-1">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 rounded-lg bg-ssgrip-silver/5 border border-ssgrip-silver/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-ssgrip-silver" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
        <div class="text-3xl font-black text-white mb-1">£<%= number_with_precision(@payments.successful.sum(:amount), precision: 2) || '0.00' %></div>
        <div class="text-sm text-ssgrip-silver-dark uppercase tracking-wider">Total Spent</div>
      </div>
    </div>

    <!-- Payment History Table -->
    <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 overflow-hidden">
      <div class="p-6 border-b border-ssgrip-silver/10">
        <h2 class="text-xl font-black text-white mb-1">All Transactions</h2>
        <p class="text-sm text-ssgrip-silver">Complete history of your payments and orders</p>
      </div>

      <% if @payments.any? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-ssgrip-darkest/50 border-b border-ssgrip-silver/10">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Order</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Payment Date</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Amount</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Status</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Payment Type</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Payment Method</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-ssgrip-silver/10">
              <% @payments.order(created_at: :desc).each do |payment| %>
                <tr class="hover:bg-ssgrip-darkest/30 transition-colors">
                  <td class="px-6 py-4">
                    <div>
                      <p class="font-semibold text-white"><%= payment.order&.order_number || '-' %></p>
                      <p class="text-xs text-ssgrip-silver-dark"><%= payment.order&.email || payment.user.email %></p>
                    </div>
                  </td>

                  <td class="px-6 py-4">
                    <div class="text-sm">
                      <p class="text-white font-medium"><%= payment.created_at.strftime("%B %d, %Y") %></p>
                      <p class="text-ssgrip-silver-dark"><%= payment.created_at.strftime("%I:%M %p") %></p>
                    </div>
                  </td>

                  <td class="px-6 py-4">
                    <div class="text-lg font-bold text-white">
                      £<%= number_with_precision(payment.amount, precision: 2) %>
                    </div>
                    <div class="text-xs text-ssgrip-silver-dark">
                      <%= payment.currency || 'GBP' %>
                    </div>
                  </td>

                  <td class="px-6 py-4">
                    <% case payment.status %>
                    <% when 'successful' %>
                      <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-green-500/10 text-green-400 border border-green-500/20">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                        Successful
                      </span>
                    <% when 'cancelled' %>
                      <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-red-500/10 text-red-400 border border-red-500/20">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                        Cancelled
                      </span>
                    <% when 'voided' %>
                      <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-ssgrip-silver/5 text-ssgrip-silver-dark border border-ssgrip-silver/10">
                        Voided
                      </span>
                    <% when 'refunded' %>
                      <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-yellow-500/10 text-yellow-400 border border-yellow-500/20">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/></svg>
                        Refunded
                      </span>
                    <% end %>
                  </td>

                  <td class="px-6 py-4">
                    <div class="text-sm">
                      <p class="text-white font-medium capitalize"><%= payment.payment_type&.gsub('_', ' ') || 'N/A' %></p>
                      <% if payment.initial_payment %>
                        <span class="inline-flex items-center px-2 py-1 rounded text-xs bg-yellow-400/10 text-yellow-400 border border-yellow-400/20 mt-1">
                          Initial
                        </span>
                      <% end %>
                    </div>
                  </td>

                  <td class="px-6 py-4">
                    <div class="text-sm">
                      <% if payment.payment_method.present? %>
                        <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-ssgrip-silver/5 text-ssgrip-silver border border-ssgrip-silver/20">
                          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/></svg>
                          <%= payment.payment_method.titleize %>
                        </span>
                      <% else %>
                        <span class="text-ssgrip-silver-dark text-xs">Not specified</span>
                      <% end %>
                    </div>
                  </td>

                  <td class="px-6 py-4">
                    <div class="flex items-center space-x-3">
                      <% if payment.order %>
                        <%= link_to order_path(payment.order.order_number), class: "inline-flex items-center justify-center w-8 h-8 rounded-lg text-ssgrip-silver hover:text-white hover:bg-ssgrip-silver/10 transition-all", title: "View order details" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-16">
          <svg class="w-16 h-16 mx-auto text-ssgrip-silver-dark mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
          </svg>
          <h3 class="text-xl font-bold text-white mb-2">No payment history yet</h3>
          <p class="text-ssgrip-silver mb-6">Your payment transactions will appear here once you place your first order.</p>
          <%= link_to catalog_path, class: "inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-white text-ssgrip-darkest font-bold hover:bg-ssgrip-accent-bright transition-all" do %>
            <span>Browse Catalog</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
