<% if StripeSetting.first&.secret_key.present? && StripeSetting.first&.publishable_key.present? && StripeSetting.first&.webhook_secret.present? %>
  <style>
    #drawerBackdrop {
      background-color: rgba(0, 0, 0, 0.5);
    }
  </style>
  <div class="min-h-screen bg-gradient-to-br from-zinc-950 via-zinc-900 to-zinc-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Header Section -->
      <div class="mb-8 relative">
        <div class="absolute inset-0 bg-gradient-to-r from-amber-500/10 via-orange-500/10 to-red-500/10 rounded-2xl blur-3xl"></div>
        <div class="relative bg-zinc-900/50 backdrop-blur-sm border border-zinc-800/50 rounded-2xl p-6">
          <div>
            <h1 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-white via-zinc-100 to-zinc-300 bg-clip-text text-transparent mb-2">
              Payment Management
            </h1>
            <p class="text-zinc-400">Monitor and manage all payment transactions</p>
          </div>
        </div>
      </div>

      <!-- Search Bar -->
      <div class="bg-gradient-to-br from-zinc-900 to-zinc-900/50 border border-zinc-800 rounded-2xl p-4 mb-8 backdrop-blur-sm">
        <form action="<%= admin_payments_path %>" method="get">
          <div class="relative">
            <i class='bx bx-search absolute left-3 top-1/2 -translate-y-1/2 text-zinc-400'></i>
            <input 
              type="text" 
              name="query"
              placeholder="Search payments..."
              value="<%= params[:query] %>"
              class="w-full pl-10 pr-4 py-3 rounded-xl border border-zinc-700 bg-zinc-800/50 text-white placeholder-zinc-400 focus:ring-2 focus:ring-amber-500 focus:border-amber-500 focus:outline-none transition-all"
            >
          </div>
        </form>
      </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div class="group relative overflow-hidden bg-gradient-to-br from-zinc-900 to-zinc-900/50 border border-zinc-800 rounded-2xl p-6 hover:border-green-500/50 transition-all duration-300">
          <div class="absolute top-0 right-0 w-32 h-32 bg-green-500/5 rounded-full blur-2xl group-hover:bg-green-500/10 transition-all duration-300"></div>
          <div class="relative">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-green-500/20 to-emerald-500/20 rounded-xl flex items-center justify-center ring-1 ring-green-500/30">
                <i class='bx bx-check-circle text-green-400 text-2xl'></i>
              </div>
            </div>
            <div class="text-3xl font-bold text-white mb-1"><%= @payments.count { |p| p.status == 'successful' } %></div>
            <div class="text-sm text-zinc-400">Successful Payments</div>
          </div>
        </div>
        
        <div class="group relative overflow-hidden bg-gradient-to-br from-zinc-900 to-zinc-900/50 border border-zinc-800 rounded-2xl p-6 hover:border-amber-500/50 transition-all duration-300">
          <div class="absolute top-0 right-0 w-32 h-32 bg-amber-500/5 rounded-full blur-2xl group-hover:bg-amber-500/10 transition-all duration-300"></div>
          <div class="relative">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-amber-500/20 to-orange-500/20 rounded-xl flex items-center justify-center ring-1 ring-amber-500/30">
                <i class='bx bx-time text-amber-400 text-2xl'></i>
              </div>
            </div>
            <div class="text-3xl font-bold text-white mb-1"><%= @payments.count { |p| p.status == 'pending' } %></div>
            <div class="text-sm text-zinc-400">Pending Payments</div>
          </div>
        </div>

        <div class="group relative overflow-hidden bg-gradient-to-br from-zinc-900 to-zinc-900/50 border border-zinc-800 rounded-2xl p-6 hover:border-red-500/50 transition-all duration-300">
          <div class="absolute top-0 right-0 w-32 h-32 bg-red-500/5 rounded-full blur-2xl group-hover:bg-red-500/10 transition-all duration-300"></div>
          <div class="relative">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-red-500/20 to-rose-500/20 rounded-xl flex items-center justify-center ring-1 ring-red-500/30">
                <i class='bx bx-x-circle text-red-400 text-2xl'></i>
              </div>
            </div>
            <div class="text-3xl font-bold text-white mb-1"><%= @payments.count { |p| ['cancelled', 'voided', 'refunded'].include?(p.status) } %></div>
            <div class="text-sm text-zinc-400">Failed Payments</div>
          </div>
        </div>
      </div>

      <!-- Payments Table -->
      <div class="bg-gradient-to-br from-zinc-900 to-zinc-900/50 border border-zinc-800 rounded-2xl backdrop-blur-sm overflow-hidden">
        <% if @payments.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full">
              <thead class="bg-zinc-800/50 border-b border-zinc-700/50">
                <tr>
                  <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-zinc-400 uppercase tracking-wider">Payment ID</th>
                  <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-zinc-400 uppercase tracking-wider">Service</th>
                  <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-zinc-400 uppercase tracking-wider">Amount</th>
                  <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-zinc-400 uppercase tracking-wider">Status</th>
                  <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-zinc-400 uppercase tracking-wider">Time</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-zinc-700">
                <% @payments.order(created_at: :desc).each do |payment| %>
                  <tr class="hover:bg-zinc-800/30 transition-colors duration-150 cursor-pointer" onclick="openPaymentDrawer('<%= payment.id %>')">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-medium text-white">#<%= payment.id %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-white"><%= payment.booking&.service_type || 'N/A' %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-white">
                        <% currency_symbol = case payment.currency.downcase
                          when 'usd', 'USD' then '$'
                          when 'gbp', 'GBP' then '£'
                          when 'eur', 'EUR' then '€'
                          else ''
                          end %>
                        <%= currency_symbol %><%= number_with_precision(payment.amount, precision: 2) %>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <% case payment.status %>
                      <% when 'successful' %>
                        <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-gradient-to-r from-green-500/20 to-emerald-500/20 text-green-400 ring-1 ring-green-500/30">
                          Successful
                        </span>
                      <% when 'pending' %>
                        <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-gradient-to-r from-amber-500/20 to-yellow-500/20 text-amber-400 ring-1 ring-amber-500/30">
                          Pending
                        </span>
                      <% else %>
                        <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-gradient-to-r from-red-500/20 to-rose-500/20 text-red-400 ring-1 ring-red-500/30">
                          <%= payment.status.capitalize %>
                        </span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-zinc-400">
                        <%= time_ago_in_words(payment.created_at) %> ago
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-16">
            <div class="relative inline-flex mb-6">
              <div class="absolute inset-0 bg-gradient-to-r from-amber-500/20 to-orange-500/20 rounded-full blur-2xl"></div>
              <div class="relative w-20 h-20 bg-zinc-800 rounded-full flex items-center justify-center ring-1 ring-zinc-700">
                <i class='bx bx-credit-card text-zinc-500 text-3xl'></i>
              </div>
            </div>
            <h3 class="text-xl font-bold text-white mb-2">No Payments Found</h3>
            <p class="text-zinc-500">There are currently no payments in the system.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Payment Details Drawer -->
  <div id="drawerBackdrop" class="fixed inset-0 bg-black opacity-0 transition-opacity duration-200 z-40 hidden"></div>
  <div id="paymentDrawer" class="fixed inset-y-0 right-0 w-full sm:w-[32rem] bg-zinc-900 shadow-xl transform translate-x-full transition-transform duration-200 ease-in-out z-50 border-l border-zinc-800">
    <div class="h-full flex flex-col">
      <div class="px-6 py-4 border-b border-zinc-800">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-medium text-white">Payment Details</h3>
          <button onclick="closePaymentDrawer()" class="text-zinc-400 hover:text-white transition-colors">
            <i class='bx bx-x text-2xl'></i>
          </button>
        </div>
      </div>
      <div id="paymentDetails" class="flex-1 p-6 overflow-y-auto bg-zinc-900">
        <!-- Payment details will be loaded here -->
      </div>
    </div>
  </div>

  <script>
    const paymentsData = <%= raw @payments_payload.to_json %>;

    function openPaymentDrawer(paymentId) {
      const payment = paymentsData.find(p => p.id == paymentId);
      const drawer = document.getElementById('paymentDrawer');
      const backdrop = document.getElementById('drawerBackdrop');
      const details = document.getElementById('paymentDetails');

      const ipLogs = payment.payment_ip_logs.map(log => `
        <tr>
          <td class="px-4 py-3 text-sm text-zinc-300">
            ${new Date(log.created_at).toLocaleString()}
          </td>
          <td class="px-4 py-3 text-sm text-purple-400 break-all">
            ${log.ip_address}
          </td>
        </tr>
      `).join('');

      const subscriptionButton = '';

      const showRefundButton = payment.stripe_charge_id && payment.status !== 'refunded';
      const refundButton = showRefundButton ? `
        <button onclick="refundPayment(${payment.id})" class="w-full text-center px-4 py-2 bg-gradient-to-r from-amber-500/20 to-orange-500/20 text-amber-400 rounded-xl hover:from-amber-500/30 hover:to-orange-500/30 transition-all duration-200 ring-1 ring-amber-500/30 font-medium">
          Refund Payment
        </button>
      ` : '';

      const stripeInfo = `
        <div class=\"bg-zinc-800/50 rounded-xl p-4 ring-1 ring-zinc-700/50 mb-4\">
          <h5 class=\"text-lg font-semibold text-white mb-2\">Payment Information</h5>
          <div class=\"space-y-2 overflow-x-auto\">
            <p class=\"text-sm text-zinc-300 break-all\">Charge ID: ${payment.stripe_charge_id || 'N/A'}</p>
            <p class=\"text-sm text-zinc-300 break-all\">Session ID: ${payment.stripe_session_id || 'N/A'}</p>
            <p class=\"text-sm text-zinc-300\">Currency: ${payment.currency || 'N/A'}</p>
          </div>
        </div>
      `;

      const currency_symbol = payment.currency.toLowerCase() === 'usd' || payment.currency.toUpperCase() === 'USD' ? '$' 
        : payment.currency.toLowerCase() === 'gbp' || payment.currency.toUpperCase() === 'GBP' ? '£'
        : payment.currency.toLowerCase() === 'eur' || payment.currency.toUpperCase() === 'EUR' ? '€'
        : '';

      details.innerHTML = `
        <div class="space-y-4 sm:space-y-6">
          <!-- Header Section -->
          <div class="bg-gradient-to-r from-amber-500/10 to-orange-500/10 -mx-6 -mt-6 px-4 sm:px-6 py-6 sm:py-8 rounded-t-lg border-b border-zinc-800">
            <h4 class="text-xl sm:text-2xl font-bold text-white mb-2">${payment.booking?.service_type || 'Payment'}</h4>
            <div class="flex items-center space-x-2 text-zinc-400 text-sm sm:text-base">
              <i class='bx bx-time-five'></i>
              <span>${new Date(payment.created_at).toLocaleString()}</span>
            </div>
          </div>

          <!-- Main Details Section -->
          <div class="bg-zinc-800/50 rounded-xl p-4 space-y-4 ring-1 ring-zinc-700/50">
            <div class="flex justify-between items-center">
              <span class="text-zinc-400 text-sm sm:text-base">Amount</span>
              <span class="text-base sm:text-lg font-semibold text-white">${currency_symbol}${payment.amount}</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-zinc-400 text-sm sm:text-base">Type</span>
              <span class="px-3 py-1 bg-purple-500/20 text-purple-400 rounded-lg text-xs sm:text-sm ring-1 ring-purple-500/30">
                ${payment.payment_type}
              </span>
            </div>
          </div>

          <!-- Status Section -->
          <div class="bg-zinc-800/50 rounded-xl p-4 ring-1 ring-zinc-700/50">
            <label class="block text-sm font-medium text-zinc-400 mb-2">Payment Status</label>
            <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-2">
              <select id="paymentStatus" class="w-full sm:flex-1 px-3 py-2 bg-zinc-700 border border-zinc-600 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 text-white text-sm">
                <option value="successful" ${payment.status === 'successful' ? 'selected' : ''}>Successful</option>
                <option value="pending" ${payment.status === 'pending' ? 'selected' : ''}>Pending</option>
                <option value="cancelled" ${payment.status === 'cancelled' ? 'selected' : ''}>Cancelled</option>
                <option value="voided" ${payment.status === 'voided' ? 'selected' : ''}>Voided</option>
                <option value="refunded" ${payment.status === 'refunded' ? 'selected' : ''}>Refunded</option>
              </select>
              <button onclick="updatePaymentStatus(${payment.id})" class="w-full sm:w-auto px-4 py-2 bg-blue-500/20 hover:bg-blue-500/30 text-blue-400 rounded-lg transition-colors ring-1 ring-blue-500/30 text-sm">
                Update
              </button>
            </div>
          </div>

          <!-- User Info Section -->
          <button onclick="window.location.href='/admin/users/${payment.user.id}/edit'" class="w-full bg-zinc-800/50 hover:bg-zinc-800 rounded-xl p-4 ring-1 ring-zinc-700/50 transition-all duration-200 group">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-br from-amber-500 to-orange-500 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-white text-base sm:text-lg">${payment.user.username.charAt(0).toUpperCase()}</span>
              </div>
              <div class="flex-1 text-left min-w-0">
                <div class="font-medium text-white group-hover:text-amber-400 transition-colors truncate text-sm sm:text-base">${payment.user.username}</div>
                <div class="text-xs sm:text-sm text-zinc-400 truncate">${payment.user.email}</div>
              </div>
              <i class='bx bx-right-arrow-alt text-zinc-400 group-hover:text-amber-400 text-xl'></i>
            </div>
          </button>

          <!-- Stripe Info Section -->
          ${stripeInfo}

          <!-- IP Logs Section -->
          <div class="bg-zinc-800/50 rounded-xl p-4 ring-1 ring-zinc-700/50 overflow-hidden">
            <h5 class="text-base sm:text-lg font-semibold text-white mb-4">IP Activity Log</h5>
            <div class="overflow-x-auto rounded-lg border border-zinc-700 -mx-4 sm:mx-0">
              <table class="min-w-full">
                <thead class="bg-zinc-700/50">
                  <tr>
                    <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-zinc-400 uppercase whitespace-nowrap">Time</th>
                    <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-zinc-400 uppercase">IP Address</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-zinc-700">
                  ${ipLogs}
                </tbody>
              </table>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="space-y-3 pt-2">
            ${subscriptionButton}
            <button onclick="deletePayment(${payment.id})" class="w-full text-center px-4 py-2 bg-gradient-to-r from-red-500/20 to-rose-500/20 hover:from-red-500/30 hover:to-rose-500/30 text-red-400 rounded-xl transition-all duration-200 ring-1 ring-red-500/30 font-medium text-sm sm:text-base">
              Delete Payment
            </button>
            ${refundButton}
          </div>
        </div>
      `;

      drawer.classList.remove('translate-x-full');
      backdrop.classList.remove('hidden');
      setTimeout(() => {
        backdrop.classList.remove('opacity-0');
      }, 10);
    }

    function closePaymentDrawer() {
      const drawer = document.getElementById('paymentDrawer');
      const backdrop = document.getElementById('drawerBackdrop');
      drawer.classList.add('translate-x-full');
      backdrop.classList.add('opacity-0');
      setTimeout(() => {
        backdrop.classList.add('hidden');
      }, 300);
    }

    function deletePayment(paymentId) {
      if (confirm('Are you sure you want to delete this payment?')) {
        fetch(`/admin/payments/${paymentId}`, {
          method: 'DELETE',
          headers: {
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
          }
        }).then(response => {
          if (response.ok) {
            alert('Payment deleted successfully');
            location.reload();
          } else {
            alert('Failed to delete payment');
          }
        });
      }
    }

    function updatePaymentStatus(paymentId) {
      const status = document.getElementById('paymentStatus').value;
      fetch(`/admin/payments/${paymentId}`, {
        method: 'PATCH',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
        },
        body: JSON.stringify({ payment: { status: status } })
      }).then(response => {
        if (response.ok) {
          alert('Payment status updated successfully');
          location.reload();
        } else {
          alert('Failed to update payment status');
        }
      });
    }

    function refundPayment(paymentId) {
      if (confirm('Are you sure you want to refund this payment?')) {
        fetch(`/admin/payments/${paymentId}/refund`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
          }
        }).then(response => {
          if (response.ok) {
            alert('Payment refunded successfully');
            location.reload();
          } else {
            alert('Failed to refund payment');
          }
        });
      }
    }

    document.getElementById('drawerBackdrop').addEventListener('click', closePaymentDrawer);
  </script>
<% else %>
  <%= render 'layouts/no_stripe' %>
<% end %>
