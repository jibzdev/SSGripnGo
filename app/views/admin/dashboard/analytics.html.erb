<div class="p-6 space-y-6">
  <div>
    <h1 class="text-2xl font-semibold text-white mb-2">Analytics</h1>
    <p class="text-sm text-zinc-400">Order volume and revenue across the selected range.</p>
  </div>

  <div class="rounded-2xl border border-white/5 bg-zinc-900/60 p-6">
    <h2 class="text-lg font-semibold text-white mb-4">Orders by day</h2>
    <ul class="space-y-2 text-sm text-zinc-300">
      <% @orders_by_day.each do |day, count| %>
        <li class="flex justify-between border-b border-white/5 pb-2">
          <span><%= day %></span>
          <span><%= count %></span>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="rounded-2xl border border-white/5 bg-zinc-900/60 p-6">
    <h2 class="text-lg font-semibold text-white mb-4">Revenue by day</h2>
    <ul class="space-y-2 text-sm text-zinc-300">
      <% @revenue_by_day.each do |day, total| %>
        <li class="flex justify-between border-b border-white/5 pb-2">
          <span><%= day %></span>
          <span><%= number_to_currency(total) %></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>

