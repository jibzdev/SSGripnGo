<div class="p-6 space-y-4">
  <h1 class="text-2xl font-semibold text-white">Reports</h1>
  <div class="rounded-2xl border border-white/5 bg-zinc-900/60 p-6 grid gap-4 md:grid-cols-2">
    <div>
      <p class="text-sm text-zinc-400">Total orders</p>
      <p class="text-3xl font-bold text-white"><%= @order_report[:total] %></p>
    </div>
    <div>
      <p class="text-sm text-zinc-400">Pending</p>
      <p class="text-3xl font-bold text-white"><%= @order_report[:pending] %></p>
    </div>
    <div>
      <p class="text-sm text-zinc-400">Fulfilled</p>
      <p class="text-3xl font-bold text-white"><%= @order_report[:fulfilled] %></p>
    </div>
    <div>
      <p class="text-sm text-zinc-400">Cancelled</p>
      <p class="text-3xl font-bold text-white"><%= @order_report[:cancelled] %></p>
    </div>
    <div class="md:col-span-2">
      <p class="text-sm text-zinc-400">Revenue</p>
      <p class="text-3xl font-bold text-white"><%= number_to_currency(@order_report[:revenue]) %></p>
    </div>
  </div>
</div>

