<section class="bg-ssgrip-darkest min-h-screen text-white">
  <div class="max-w-7xl mx-auto px-6 py-8 space-y-6">
    <!-- Header -->
    <div>
      <p class="text-xs text-ssgrip-silver-dark uppercase tracking-[0.3em] mb-2">Order Management</p>
      <h1 class="text-4xl font-black text-white">Orders</h1>
    </div>

    <!-- Orders Table -->
    <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full text-left text-sm">
          <thead>
            <tr class="text-xs uppercase text-ssgrip-silver-dark border-b border-ssgrip-silver/10">
              <th class="py-4 px-6 font-bold tracking-wider">Order</th>
              <th class="px-6 font-bold tracking-wider">Customer</th>
              <th class="px-6 font-bold tracking-wider">Status</th>
              <th class="px-6 font-bold tracking-wider">Total</th>
              <th class="px-6 font-bold tracking-wider">Placed</th>
              <th class="px-6 text-right font-bold tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr class="border-b border-ssgrip-silver/10 hover:bg-ssgrip-silver/5 transition-colors">
                <td class="py-4 px-6 font-semibold text-white"><%= order.order_number %></td>
                <td class="px-6 text-ssgrip-silver"><%= order.user&.email || order.email %></td>
                <td class="px-6">
                  <span class="px-2 py-1 rounded-full text-xs font-semibold <%= status_badge_class(order.status) %>"><%= order.status %></span>
                </td>
                <td class="px-6 text-white font-medium"><%= number_to_currency(order.total) %></td>
                <td class="px-6 text-ssgrip-silver"><%= l(order.created_at, format: :short) %></td>
                <td class="px-6 text-right">
                  <%= link_to admin_order_path(order), class: "text-white hover:text-ssgrip-accent-bright transition-colors text-sm font-medium" do %>
                    View â†’
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
