<section class="bg-ssgrip-darkest min-h-screen text-white">
  <div class="max-w-4xl mx-auto px-6 py-10 space-y-6">
    <div>
      <p class="text-xs text-ssgrip-silver-dark uppercase tracking-[0.3em] mb-2">Release Notes</p>
      <h1 class="text-4xl font-black text-white">Changelog</h1>
      <p class="text-sm text-ssgrip-silver">Keep your team informed about product changes.</p>
    </div>

    <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6">
      <%= form_with url: admin_create_changelog_path, method: :post, local: true do |f| %>
        <label class="text-sm text-ssgrip-silver-dark uppercase tracking-wider mb-2 block">New Entry</label>
        <%= text_area_tag :changelog, nil, rows: 3, class: "w-full rounded-lg bg-ssgrip-darkest/50 border border-ssgrip-silver/20 px-4 py-3 text-white focus:outline-none focus:border-ssgrip-silver transition-colors", placeholder: "Describe the change or deployment..." %>
        <div class="flex justify-end mt-4">
          <button class="inline-flex items-center rounded-lg bg-white text-ssgrip-darkest font-bold px-6 py-3 hover:bg-ssgrip-accent-bright transition-all">
            Publish
          </button>
        </div>
      <% end %>
    </div>

    <div class="space-y-3">
      <% if @entries.any? %>
        <% @entries.each do |entry| %>
          <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/40 p-5">
            <div class="flex items-center justify-between mb-2">
              <p class="text-sm text-ssgrip-silver-dark uppercase tracking-wider">
                <%= entry.created_at.strftime("%b %d, %Y %H:%M") %>
              </p>
              <p class="text-xs text-ssgrip-silver-dark">
                <%= entry.user&.username || 'System' %>
              </p>
            </div>
            <p class="text-white text-base"><%= entry.description.sub(/^Changelog:\s*/i, '') %></p>
          </div>
        <% end %>
      <% else %>
        <div class="rounded-xl border border-dashed border-ssgrip-silver/20 bg-ssgrip-darker/20 p-10 text-center">
          <p class="text-ssgrip-silver">No changelog entries yet. Use the form above to add your first update.</p>
        </div>
      <% end %>
    </div>
  </div>
</section>

