<section class="bg-ssgrip-darkest min-h-screen text-white">
  <div class="max-w-5xl mx-auto px-6 py-8">
    <!-- Header -->
    <div class="mb-8 rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6">
      <div class="flex items-center gap-4">
        <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center">
          <span class="text-ssgrip-darkest font-black text-2xl"><%= @user.username.first.upcase %></span>
        </div>
        <div>
          <p class="text-xs text-ssgrip-silver-dark uppercase tracking-[0.3em] mb-1">User Management</p>
          <h1 class="text-3xl font-black text-white"><%= @user.username %></h1>
          <p class="text-ssgrip-silver text-sm">Member since <%= @user.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- User Form -->
      <div class="lg:col-span-2 space-y-6">
        <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-8">
          <%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true, class: "space-y-6") do |form| %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <%= form.label :username, class: "text-sm text-ssgrip-silver-dark uppercase tracking-wider mb-2 block" %>
                <%= form.text_field :username, class: "w-full rounded-lg bg-ssgrip-darkest/50 border border-ssgrip-silver/20 px-4 py-3 text-white focus:outline-none focus:border-ssgrip-silver transition-colors" %>
              </div>
              
              <div>
                <%= form.label :email, class: "text-sm text-ssgrip-silver-dark uppercase tracking-wider mb-2 block" %>
                <%= form.text_field :email, class: "w-full rounded-lg bg-ssgrip-darkest/50 border border-ssgrip-silver/20 px-4 py-3 text-white focus:outline-none focus:border-ssgrip-silver transition-colors" %>
              </div>

              <!-- Password Change Section -->
              <div class="md:col-span-2">
                <label class="text-sm text-ssgrip-silver-dark uppercase tracking-wider mb-2 block">Password</label>
                <div class="space-y-4">
                  <%= form.password_field :password, placeholder: "New Password (leave blank to keep current)", class: "w-full rounded-lg bg-ssgrip-darkest/50 border border-ssgrip-silver/20 px-4 py-3 text-white placeholder-ssgrip-silver-dark focus:outline-none focus:border-ssgrip-silver transition-colors" %>
                  <%= form.password_field :password_confirmation, placeholder: "Confirm New Password", class: "w-full rounded-lg bg-ssgrip-darkest/50 border border-ssgrip-silver/20 px-4 py-3 text-white placeholder-ssgrip-silver-dark focus:outline-none focus:border-ssgrip-silver transition-colors" %>
                </div>
              </div>

              <div>
                <%= form.label :status, class: "text-sm text-ssgrip-silver-dark uppercase tracking-wider mb-2 block" %>
                <%= form.select :status, ['verified', 'unverified'], {}, {class: "w-full rounded-lg bg-ssgrip-darkest/50 border border-ssgrip-silver/20 px-4 py-3 text-white focus:outline-none focus:border-ssgrip-silver transition-colors"} %>
              </div>

              <div>
                <%= form.label :stripe_customer_id, class: "text-sm text-ssgrip-silver-dark uppercase tracking-wider mb-2 block" %>
                <%= form.text_field :stripe_customer_id, class: "w-full rounded-lg bg-ssgrip-darkest/50 border border-ssgrip-silver/20 px-4 py-3 text-white focus:outline-none focus:border-ssgrip-silver transition-colors" %>
              </div>

              <div class="md:col-span-2">
                <div class="flex items-center gap-4">
                  <label class="inline-flex items-center gap-2 text-sm text-white">
                    <%= form.check_box :receive_email_notifications, class: "w-5 h-5 rounded border-ssgrip-silver/20" %>
                    Receive email notifications
                  </label>
                </div>
              </div>
            </div>

            <div class="pt-4 border-t border-ssgrip-silver/10">
              <div class="flex items-center gap-4">
                <%= form.label :admin, class: "text-sm text-ssgrip-silver-dark uppercase tracking-wider" %>
                <%= form.hidden_field :admin, value: false %>
                <%= form.check_box :admin, class: "w-5 h-5 rounded border-ssgrip-silver/20" %>
              </div>
            </div>

            <div class="flex justify-end pt-4">
              <%= form.submit "Update User", class: "inline-flex items-center rounded-lg bg-white text-ssgrip-darkest font-bold px-8 py-4 hover:bg-ssgrip-accent-bright transition-all" %>
            </div>
          <% end %>
        </div>

        <!-- User Statistics -->
        <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-8">
          <h3 class="text-xl font-black text-white mb-6">User Statistics</h3>
          
          <div class="grid grid-cols-3 gap-6">
            <div class="text-center">
              <div class="text-3xl font-black text-white mb-2"><%= @user.orders.count %></div>
              <div class="text-xs text-ssgrip-silver-dark uppercase tracking-wider">Total Orders</div>
            </div>
            
            <div class="text-center">
              <div class="text-3xl font-black text-white mb-2"><%= @user.payments.count %></div>
              <div class="text-xs text-ssgrip-silver-dark uppercase tracking-wider">Total Payments</div>
            </div>
            
            <div class="text-center">
              <div class="text-3xl font-black text-white mb-2"><%= @user.activities.count %></div>
              <div class="text-xs text-ssgrip-silver-dark uppercase tracking-wider">Activities</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Side Panel -->
      <div class="space-y-6">
        <!-- IP Activity Log -->
        <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6">
          <h3 class="text-lg font-black text-white mb-4">IP Activity Log</h3>
          <% if @ip_logs.blank? %>
            <div class="text-center py-8">
              <svg class="w-12 h-12 mx-auto text-ssgrip-silver-dark mb-3 opacity-50" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              <p class="text-ssgrip-silver text-sm">No IP activity recorded yet.</p>
              <p class="text-ssgrip-silver-dark text-xs mt-1">Logs appear when user logs in.</p>
            </div>
          <% else %>
            <div class="max-h-96 overflow-y-auto space-y-3">
              <% @ip_logs.each do |log| %>
                <div class="flex items-center justify-between p-3 rounded-lg bg-ssgrip-darkest/50 border border-ssgrip-silver/10">
                  <div class="flex items-center gap-2">
                    <div class="w-2 h-2 bg-green-400 rounded-full"></div>
                    <span class="text-sm font-medium text-white"><%= log.ip_address %></span>
                  </div>
                  <span class="text-xs text-ssgrip-silver-dark"><%= log.login_time.strftime("%b %d, %H:%M") %></span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- 2FA Status -->
        <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6">
          <h3 class="text-lg font-black text-white mb-4">Security</h3>
          <div class="p-4 rounded-lg bg-ssgrip-darkest/50 border border-ssgrip-silver/10">
            <div class="flex items-center justify-between mb-2">
              <span class="font-semibold text-white text-sm">Two-Factor Authentication (2FA)</span>
              <% if @user.google_secret.present? %>
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-semibold bg-green-500/10 text-green-400 border border-green-500/20">
                  Enabled
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-semibold bg-ssgrip-silver/5 text-ssgrip-silver-dark border border-ssgrip-silver/10">
                  Disabled
                </span>
              <% end %>
            </div>
            <p class="text-xs text-ssgrip-silver-dark">
              <%= @user.google_secret.present? ? "User has 2FA enabled" : "User has not enabled 2FA" %>
            </p>
            <% if @user.google_secret.present? %>
              <%= form_with url: admin_remove_2fa_path(@user), method: :delete, data: { turbo: false }, class: "mt-3" do |f| %>
                <%= f.button type: :submit,
                    class: "w-full px-3 py-2 text-sm font-medium rounded-lg bg-red-500/10 text-red-400 border border-red-500/20 hover:bg-red-500/20 transition-colors" do %>
                  Remove 2FA
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>

        <!-- Delete User -->
        <div class="rounded-xl border border-red-500/20 bg-red-500/5 p-6">
          <h3 class="text-lg font-black text-white mb-2">Danger Zone</h3>
          <p class="text-sm text-ssgrip-silver mb-4">Permanently delete this user account</p>
          <%= button_to 'Delete User', admin_user_path(@user), method: :delete,
              data: { confirm: 'Are you sure you want to delete this user? This action cannot be undone.' },
              class: "w-full px-4 py-3 bg-red-500/10 text-red-400 border border-red-500/20 font-semibold rounded-lg hover:bg-red-500/20 transition-all" %>
        </div>
      </div>
    </div>
  </div>
</section>
