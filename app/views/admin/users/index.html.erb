<section class="bg-ssgrip-darkest min-h-screen text-white">
  <div class="max-w-7xl mx-auto px-6 py-8">
    <!-- Header -->
    <div class="mb-10">
      <p class="text-xs text-ssgrip-silver-dark uppercase tracking-[0.3em] mb-2">User Management</p>
      <h1 class="text-4xl font-black text-white mb-2">Users</h1>
      <p class="text-ssgrip-silver">Manage user accounts and permissions</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
      <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6">
        <div class="text-3xl font-black text-white mb-2"><%= @users.total_count %></div>
        <div class="text-xs text-ssgrip-silver-dark uppercase tracking-wider">Total Users</div>
      </div>
      
      <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6">
        <div class="text-3xl font-black text-white mb-2"><%= User.where(status: 'verified').count %></div>
        <div class="text-xs text-ssgrip-silver-dark uppercase tracking-wider">Verified</div>
      </div>
      
      <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6">
        <div class="text-3xl font-black text-white mb-2"><%= User.where(status: 'unverified').count %></div>
        <div class="text-xs text-ssgrip-silver-dark uppercase tracking-wider">Unverified</div>
      </div>
      
      <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6">
        <div class="text-3xl font-black text-white mb-2"><%= User.where(admin: true).count %></div>
        <div class="text-xs text-ssgrip-silver-dark uppercase tracking-wider">Admins</div>
      </div>
    </div>

    <!-- Search and Filters -->
    <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6 mb-8">
      <div class="flex flex-col sm:flex-row gap-4">
        <div class="relative flex-1">
          <input type="text" placeholder="Search users..." class="w-full pl-10 pr-4 py-3 bg-ssgrip-darkest/50 border border-ssgrip-silver/20 rounded-lg text-white placeholder-ssgrip-silver-dark focus:outline-none focus:border-ssgrip-silver transition-colors">
          <svg class="w-4 h-4 absolute left-3 top-4 text-ssgrip-silver-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
        </div>
        
        <select class="px-4 py-3 bg-ssgrip-darkest/50 border border-ssgrip-silver/20 rounded-lg text-white focus:outline-none focus:border-ssgrip-silver transition-colors">
          <option value="">All Status</option>
          <option value="verified">Verified</option>
          <option value="unverified">Unverified</option>
        </select>
      </div>
    </div>

    <!-- Users Table -->
    <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 overflow-hidden">
      <% if @users.any? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-ssgrip-darkest/50 border-b border-ssgrip-silver/10">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">User</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Status</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Role</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Orders</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Joined</th>
                <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-ssgrip-silver/10">
              <% @users.each do |user| %>
                <tr class="hover:bg-ssgrip-silver/5 transition-colors">
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center">
                        <span class="text-ssgrip-darkest font-bold text-sm"><%= user.username.first.upcase %></span>
                      </div>
                      <div class="ml-4">
                        <div class="text-white font-semibold"><%= user.username %></div>
                        <div class="text-ssgrip-silver text-sm"><%= user.email %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <% if user.status == 'verified' %>
                      <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-green-500/10 text-green-400 border border-green-500/20">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                        Verified
                      </span>
                    <% else %>
                      <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-yellow-500/10 text-yellow-400 border border-yellow-500/20">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                        Unverified
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4">
                    <% if user.admin? %>
                      <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-ssgrip-silver/5 text-white border border-ssgrip-silver/20">
                        Admin
                      </span>
                    <% else %>
                      <span class="text-ssgrip-silver text-sm">User</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-white font-medium"><%= user.orders.count %></div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-ssgrip-silver text-sm"><%= user.created_at.strftime("%B %d, %Y") %></div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex items-center space-x-3">
                      <a href="<%= admin_user_path(user) %>" class="text-white hover:text-ssgrip-accent-bright transition-colors" title="View Details">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                      </a>
                      <a href="<%= edit_admin_user_path(user) %>" class="text-ssgrip-silver hover:text-white transition-colors" title="Edit User">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                      </a>
                      <% unless user == current_user %>
                        <%= button_to admin_user_path(user), method: :delete, 
                            data: { confirm: 'Are you sure you want to delete this user? This action cannot be undone.' }, 
                            class: "text-red-400 hover:text-red-300 transition-colors bg-transparent border-0 p-0", 
                            title: "Delete User",
                            form: { style: 'display: inline;' } do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                        <% end %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <!-- Pagination -->
        <% if @users.respond_to?(:current_page) %>
          <div class="px-6 py-4 border-t border-ssgrip-silver/10">
            <%= paginate @users %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-16">
          <svg class="w-16 h-16 mx-auto text-ssgrip-silver-dark mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          <h3 class="text-xl font-bold text-white mb-2">No users found</h3>
          <p class="text-ssgrip-silver">No users match your current search criteria</p>
        </div>
      <% end %>
    </div>
  </div>
</section>
