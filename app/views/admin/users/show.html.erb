<section class="bg-ssgrip-darkest min-h-screen text-white">
  <div class="max-w-7xl mx-auto px-6 py-8">
    <!-- Header -->
    <div class="mb-8 rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6">
      <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
        <div class="flex items-center gap-4">
          <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center">
            <span class="text-ssgrip-darkest font-black text-2xl"><%= @user.username.first.upcase %></span>
          </div>
          <div>
            <h1 class="text-3xl font-black text-white mb-1"><%= @user.username %></h1>
            <p class="text-ssgrip-silver text-sm">Member since <%= @user.created_at.strftime("%B %d, %Y") %></p>
          </div>
        </div>
        <div class="flex gap-3">
          <%= link_to edit_admin_user_path(@user), class: "inline-flex items-center gap-2 px-5 py-3 bg-white text-ssgrip-darkest font-bold rounded-lg hover:bg-ssgrip-accent-bright transition-all" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
            <span>Edit</span>
          <% end %>
          <%= link_to admin_users_path, class: "inline-flex items-center gap-2 px-5 py-3 border border-ssgrip-silver/30 text-white rounded-lg hover:border-ssgrip-silver hover:bg-ssgrip-silver/5 transition-all" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
            <span>Back</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- User Info Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- User Details -->
      <div class="space-y-6">
        <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-6">
          <div class="text-center mb-6">
            <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-ssgrip-darkest font-black text-3xl"><%= @user.username.first.upcase %></span>
            </div>
            <h2 class="text-xl font-black text-white mb-1"><%= @user.username %></h2>
            <p class="text-ssgrip-silver text-sm break-all"><%= @user.email %></p>
          </div>
          
          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="text-ssgrip-silver-dark text-sm uppercase tracking-wider">Status:</span>
              <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-semibold <%= @user.status == 'verified' ? 'bg-green-500/10 text-green-400 border border-green-500/20' : 'bg-yellow-500/10 text-yellow-400 border border-yellow-500/20' %>">
                <%= @user.status.titleize %>
              </span>
            </div>
            
            <div class="flex justify-between items-center pt-3 border-t border-ssgrip-silver/10">
              <span class="text-ssgrip-silver-dark text-sm uppercase tracking-wider">Role:</span>
              <% if @user.admin? %>
                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-ssgrip-silver/5 text-white border border-ssgrip-silver/20">
                  Admin
                </span>
              <% else %>
                <span class="text-ssgrip-silver text-sm">User</span>
              <% end %>
            </div>
            
            <div class="flex justify-between items-center">
              <span class="text-ssgrip-silver-dark text-sm uppercase tracking-wider">Last Active:</span>
              <span class="text-white text-sm"><%= @user.last_active_at&.strftime("%b %d, %Y") || "Never" %></span>
            </div>
            
            <div class="flex justify-between items-center pt-3 border-t border-ssgrip-silver/10">
              <span class="text-ssgrip-silver-dark text-sm uppercase tracking-wider">Total Orders:</span>
              <span class="text-white text-sm font-semibold"><%= @user_orders.count %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- User Orders -->
      <div class="lg:col-span-2">
        <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 overflow-hidden">
          <div class="px-6 py-4 border-b border-ssgrip-silver/10">
            <h3 class="text-lg font-black text-white">Recent Orders</h3>
          </div>
          
          <% if @user_orders.any? %>
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-ssgrip-darkest/50 border-b border-ssgrip-silver/10">
                  <tr>
                    <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Order</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Placed</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Status</th>
                    <th class="px-6 py-4 text-left text-xs font-bold text-ssgrip-silver-dark uppercase tracking-wider">Total</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-ssgrip-silver/10">
                  <% @user_orders.limit(10).each do |order| %>
                    <tr class="hover:bg-ssgrip-silver/5 transition-colors">
                      <td class="px-6 py-4">
                        <div class="text-sm font-semibold text-white"><%= order.order_number %></div>
                      </td>
                      <td class="px-6 py-4 text-sm text-ssgrip-silver">
                        <%= l(order.created_at, format: :short) %>
                      </td>
                      <td class="px-6 py-4">
                        <span class="px-2 py-1 rounded-lg text-xs font-semibold <%= status_badge_class(order.status) %>">
                          <%= order.status.titleize %>
                        </span>
                      </td>
                      <td class="px-6 py-4 text-sm text-white font-medium">
                        <%= number_to_currency(order.total) %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="px-6 py-16 text-center">
              <svg class="w-16 h-16 mx-auto text-ssgrip-silver-dark mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
              </svg>
              <h3 class="text-xl font-bold text-white mb-2">No Orders Found</h3>
              <p class="text-ssgrip-silver">This user hasn't placed any orders yet.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
