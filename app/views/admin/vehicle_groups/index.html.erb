<div class="min-h-screen bg-gradient-to-br from-zinc-950 via-zinc-900 to-zinc-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8 relative">
      <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/10 via-teal-500/10 to-cyan-500/10 rounded-2xl blur-3xl"></div>
      <div class="relative bg-zinc-900/50 backdrop-blur-sm border border-zinc-800/50 rounded-2xl p-6">
        <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
          <div>
            <h1 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-white via-zinc-100 to-zinc-300 bg-clip-text text-transparent mb-2">
              Vehicle Groups & Pricing
            </h1>
            <p class="text-zinc-400">Manage vehicle categories and service pricing tiers</p>
          </div>
          <%= link_to new_admin_vehicle_group_path, class: "inline-flex items-center gap-2 bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-400 hover:to-teal-400 text-white font-semibold px-6 py-3 rounded-xl transition-all duration-200 shadow-lg shadow-emerald-500/20 hover:shadow-emerald-500/30 hover:scale-105" do %>
            <i class='bx bx-plus text-lg'></i>
            <span>Add New Group</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Vehicle Groups Table -->
    <div class="bg-gradient-to-br from-zinc-900 to-zinc-900/50 border border-zinc-800 rounded-2xl backdrop-blur-sm overflow-hidden">
      <% if @vehicle_groups.any? %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-zinc-800/50 border-b border-zinc-700/50">
              <tr>
                <th class="px-6 py-4 text-left text-xs font-semibold text-zinc-400 uppercase tracking-wider">Group</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-zinc-400 uppercase tracking-wider">Code</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-zinc-400 uppercase tracking-wider">Description</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-zinc-400 uppercase tracking-wider">Status</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-zinc-400 uppercase tracking-wider">Services</th>
                <th class="px-6 py-4 text-left text-xs font-semibold text-zinc-400 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-zinc-700">
              <% @vehicle_groups.each do |group| %>
                <tr class="hover:bg-zinc-800/30 transition-colors duration-300">
                  <td class="px-6 py-4">
                    <div class="flex items-center">
                      <div class="w-10 h-10 bg-gradient-to-br from-emerald-500/20 to-teal-500/20 rounded-xl flex items-center justify-center mr-3 ring-1 ring-emerald-500/30">
                        <i class='bx bx-car text-emerald-400'></i>
                      </div>
                      <div>
                        <div class="text-white font-medium"><%= group.name %></div>
                        <div class="text-zinc-500 text-xs mt-0.5">Updated <%= time_ago_in_words(group.updated_at) %> ago</div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-mono font-semibold bg-gradient-to-r from-blue-500/20 to-cyan-500/20 text-blue-400 ring-1 ring-blue-500/30">
                      <%= group.code %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-zinc-400 text-sm"><%= truncate(group.description.presence || 'No description', length: 60) %></div>
                  </td>
                  <td class="px-6 py-4">
                    <% if group.active? %>
                      <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-gradient-to-r from-green-500/20 to-emerald-500/20 text-green-400 ring-1 ring-green-500/30">
                        <i class='bx bx-check'></i>Active
                      </span>
                    <% else %>
                      <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg text-xs font-semibold bg-gradient-to-r from-red-500/20 to-rose-500/20 text-red-400 ring-1 ring-red-500/30">
                        <i class='bx bx-x'></i>Inactive
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-white font-medium"><%= group.group_service_prices.count %> prices</div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex items-center space-x-3">
                      <%= link_to edit_admin_vehicle_group_path(group), class: "p-2 text-emerald-400 hover:text-emerald-300 hover:bg-emerald-500/10 rounded-lg transition-all duration-200", title: "Edit Group" do %>
                        <i class='bx bx-edit text-lg'></i>
                      <% end %>
                      
                      <%= button_to admin_vehicle_group_path(group), method: :delete, form: { data: { turbo_confirm: 'Are you sure you want to delete this vehicle group?' }, class: 'inline-block' }, class: "p-2 text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded-lg transition-all duration-200", title: "Delete Group" do %>
                        <i class='bx bx-trash text-lg'></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-16">
          <div class="relative inline-flex mb-6">
            <div class="absolute inset-0 bg-gradient-to-r from-emerald-500/20 to-teal-500/20 rounded-full blur-2xl"></div>
            <div class="relative w-20 h-20 bg-zinc-800 rounded-full flex items-center justify-center ring-1 ring-zinc-700">
              <i class='bx bx-car text-zinc-500 text-3xl'></i>
            </div>
          </div>
          <h3 class="text-xl font-bold text-white mb-2">No vehicle groups found</h3>
          <p class="text-zinc-500 mb-6">Get started by creating your first vehicle group</p>
          <%= link_to new_admin_vehicle_group_path, class: "inline-flex items-center gap-2 bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-400 hover:to-teal-400 text-white font-semibold px-6 py-3 rounded-xl transition-all duration-200 shadow-lg shadow-emerald-500/20 hover:shadow-emerald-500/30 hover:scale-105" do %>
            <i class='bx bx-plus text-lg'></i>
            <span>Add New Group</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
