<div class="min-h-screen bg-gradient-to-br from-zinc-950 via-zinc-900 to-zinc-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-8 relative">
      <div class="absolute inset-0 bg-gradient-to-r from-amber-500/10 via-orange-500/10 to-red-500/10 rounded-2xl blur-3xl"></div>
      <div class="relative bg-zinc-900/50 backdrop-blur-sm border border-zinc-800/50 rounded-2xl p-6">
        <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
          <div>
            <h1 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-white via-zinc-100 to-zinc-300 bg-clip-text text-transparent mb-2">
              SEO Settings
            </h1>
            <p class="text-zinc-400">Manage search engine optimization settings for all pages</p>
          </div>
          <div class="flex items-center gap-3">
            <%= link_to new_admin_seo_setting_path, class: "inline-flex items-center gap-2 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-400 hover:to-orange-400 text-black font-semibold px-4 py-2.5 rounded-xl transition-all duration-200 shadow-lg shadow-amber-500/20 hover:shadow-amber-500/30" do %>
              <i class='bx bx-plus text-lg'></i>
              <span class="hidden sm:inline">New SEO Setting</span>
            <% end %>
            
            <%= button_to admin_initialize_seo_defaults_path, method: :post, class: "inline-flex items-center gap-2 bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-400 hover:to-purple-500 text-white font-semibold px-4 py-2.5 rounded-xl transition-all duration-200 shadow-lg shadow-blue-500/20 hover:shadow-blue-500/30" do %>
              <i class='bx bx-refresh text-lg'></i>
              <span class="hidden sm:inline">Initialize Defaults</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- SEO Settings Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6">
      <% @seo_settings.each do |seo_setting| %>
        <div class="group relative overflow-hidden bg-gradient-to-br from-zinc-900 to-zinc-900/50 border border-zinc-800 rounded-2xl p-6 hover:border-amber-500/30 transition-all duration-300">
          <div class="absolute top-0 right-0 w-32 h-32 bg-amber-500/5 rounded-full blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="relative">
            <!-- Header -->
            <div class="flex items-start justify-between mb-4">
              <div class="flex items-center gap-3 flex-1 min-w-0">
                <div class="w-12 h-12 rounded-full bg-gradient-to-r from-amber-400 to-orange-500 flex items-center justify-center flex-shrink-0 ring-2 ring-zinc-700">
                  <i class='bx bx-search-alt text-xl text-white'></i>
                </div>
                <div class="min-w-0">
                  <h3 class="text-lg font-semibold text-white capitalize truncate">
                    <%= seo_setting.page_name.gsub('_', ' ') %>
                  </h3>
                  <p class="text-sm text-zinc-400 truncate">
                    <%= seo_setting.title&.truncate(40) %>
                  </p>
                </div>
              </div>
              <div class="flex items-center space-x-2 flex-shrink-0 ml-2">
                <%= link_to edit_admin_seo_setting_path(seo_setting), class: "p-2 text-amber-400 hover:text-amber-300 hover:bg-amber-500/10 rounded-lg transition-all duration-200" do %>
                  <i class='bx bx-edit text-lg'></i>
                <% end %>
                <%= link_to admin_seo_setting_path(seo_setting), method: :delete, data: { confirm: "Are you sure you want to delete this SEO setting?" }, class: "p-2 text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded-lg transition-all duration-200" do %>
                  <i class='bx bx-trash text-lg'></i>
                <% end %>
              </div>
            </div>

            <!-- Content -->
            <div class="space-y-3">
              <div>
                <p class="text-xs font-medium text-zinc-500 uppercase tracking-wider mb-1">Description</p>
                <p class="text-sm text-zinc-300 line-clamp-2">
                  <%= seo_setting.description || "No description set" %>
                </p>
              </div>
              
              <div>
                <p class="text-xs font-medium text-zinc-500 uppercase tracking-wider mb-1">Keywords</p>
                <p class="text-sm text-zinc-300 line-clamp-1">
                  <%= seo_setting.keywords || "No keywords set" %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% if @seo_settings.empty? %>
      <div class="text-center py-16">
        <div class="relative inline-flex mb-6">
          <div class="absolute inset-0 bg-gradient-to-r from-amber-500/20 to-orange-500/20 rounded-full blur-2xl"></div>
          <div class="relative w-20 h-20 bg-zinc-800 rounded-full flex items-center justify-center ring-1 ring-zinc-700">
            <i class='bx bx-search-alt text-zinc-500 text-3xl'></i>
          </div>
        </div>
        <h3 class="text-xl font-bold text-white mb-2">No SEO settings found</h3>
        <p class="text-zinc-500 mb-6">Get started by creating your first SEO setting or initializing defaults</p>
        <div class="flex items-center justify-center gap-3">
          <%= link_to new_admin_seo_setting_path, class: "inline-flex items-center gap-2 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-400 hover:to-orange-400 text-black font-semibold px-6 py-3 rounded-xl transition-all duration-200 shadow-lg shadow-amber-500/20 hover:shadow-amber-500/30 hover:scale-105" do %>
            <i class='bx bx-plus text-lg'></i>
            <span>New SEO Setting</span>
          <% end %>
          
          <%= button_to admin_initialize_seo_defaults_path, method: :post, class: "inline-flex items-center gap-2 bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-400 hover:to-purple-500 text-white font-semibold px-6 py-3 rounded-xl transition-all duration-200 shadow-lg shadow-blue-500/20 hover:shadow-blue-500/30 hover:scale-105" do %>
            <i class='bx bx-refresh text-lg'></i>
            <span>Initialize Defaults</span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
