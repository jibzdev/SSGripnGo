<% if total_pages > 1 %>
  <nav class="flex justify-center mt-10" role="navigation" aria-label="Pagination">
    <%= paginator.render do %>
      <ul class="inline-flex items-center gap-2 text-sm">
        <%= prev_page_tag %>
        <% each_page do |page| %>
          <% if page.left_outer? || page.right_outer? || page.inside_window? %>
            <%= page_tag page %>
          <% elsif !page.was_truncated? %>
            <%= gap_tag %>
          <% end %>
        <% end %>
        <%= next_page_tag %>
      </ul>
    <% end %>
  </nav>
<% end %>

