<section class="bg-ssgrip-darkest min-h-screen text-white py-12 px-6">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="mb-10">
      <p class="text-xs text-ssgrip-silver-dark uppercase tracking-[0.3em] mb-2">Security</p>
      <h1 class="text-4xl font-black text-white mb-2">Enable Two-Factor Authentication</h1>
      <p class="text-ssgrip-silver">Secure your account with an additional layer of protection</p>
    </div>

    <div class="rounded-xl border border-ssgrip-silver/10 bg-ssgrip-darker/30 p-8">
      <div class="text-center mb-8">
        <!-- QR Code Display -->
        <div class="w-48 h-48 mx-auto bg-white rounded-lg flex items-center justify-center mb-6 p-4">
          <% if @qr_code %>
            <%= @qr_code.as_svg(module_size: 4).html_safe %>
          <% else %>
            <svg class="w-24 h-24 text-ssgrip-silver-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
            </svg>
          <% end %>
        </div>
        
        <h3 class="text-xl font-black text-white mb-2">Scan QR Code</h3>
        <p class="text-ssgrip-silver mb-6">
          Use your authenticator app to scan this QR code
        </p>
        
        <!-- Manual Entry Code -->
        <div class="rounded-lg border border-ssgrip-silver/10 bg-ssgrip-darkest/50 p-6 max-w-md mx-auto">
          <p class="text-sm text-ssgrip-silver-dark uppercase tracking-wider mb-3">Manual Entry Code:</p>
          <code class="text-sm font-mono bg-ssgrip-darker/50 px-4 py-2 rounded border border-ssgrip-silver/20 text-white inline-block"><%= @secret %></code>
        </div>
      </div>

      <%= form_with url: verify_2fa_path, method: :post, local: true, class: "space-y-6 max-w-md mx-auto" do |f| %>
        <div>
          <label class="block text-sm font-semibold text-ssgrip-silver uppercase tracking-wider mb-3">
            Verification Code
          </label>
          <%= f.text_field :otp_code, 
              class: "w-full rounded-lg border border-ssgrip-silver/20 bg-ssgrip-darkest/50 text-white focus:outline-none focus:border-ssgrip-silver transition-colors text-center text-2xl tracking-widest py-4", 
              placeholder: "000000",
              maxlength: 6,
              autocomplete: "off" %>
          <p class="mt-3 text-sm text-ssgrip-silver-dark">
            Enter the 6-digit code from your authenticator app
          </p>
        </div>

        <div class="flex flex-col sm:flex-row justify-end gap-4 pt-6">
          <%= link_to dashboard_account_path, class: "px-6 py-3 border border-ssgrip-silver/30 text-white rounded-lg hover:border-ssgrip-silver hover:bg-ssgrip-silver/5 transition-all text-center font-semibold" do %>
            Cancel
          <% end %>
          
          <%= f.submit "Verify & Enable 2FA", class: "px-6 py-3 bg-white text-ssgrip-darkest rounded-lg hover:bg-ssgrip-accent-bright transition-all font-bold" %>
        </div>
      <% end %>
    </div>

    <!-- Info Card -->
    <div class="mt-8 rounded-lg border border-ssgrip-silver/10 bg-ssgrip-darker/20 p-6">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 text-ssgrip-silver" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div>
          <h4 class="text-sm font-bold text-white mb-2 uppercase tracking-wider">How to Enable 2FA</h4>
          <ol class="text-sm text-ssgrip-silver space-y-2 list-decimal list-inside">
            <li>Download an authenticator app like Google Authenticator or Authy</li>
            <li>Scan the QR code above with your authenticator app</li>
            <li>Enter the 6-digit code shown in your app</li>
            <li>Keep your backup codes in a safe place</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</section>
