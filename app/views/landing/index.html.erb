<section class="bg-ssgrip-darkest text-white">
  <!-- Unique Hero Section with Video -->
  <div class="relative overflow-hidden h-screen">
    <!-- Video Background -->
    <div class="absolute inset-0">
      <video autoplay muted loop playsinline class="w-full h-full object-cover opacity-50">
        <source src="/assets/videos/1.mp4" type="video/mp4">
      </video>
      <div class="absolute inset-0 bg-gradient-to-br from-ssgrip-darkest/40 via-ssgrip-darkest/60 to-ssgrip-darkest/90"></div>
    </div>
    
    <!-- Content -->
    <div class="relative h-full flex flex-col">
      <div class="flex-1 flex items-center">
        <div class="mx-auto max-w-7xl px-8 w-full">
          <div class="max-w-3xl space-y-10">
            <!-- Brand -->
            <div class="space-y-3">
              <p class="inline-flex items-center text-[11px] tracking-[0.35em] uppercase text-ssgrip-silver/60">
                Luxury Steering Wheels · Est. 2025
              </p>
              <h1 class="text-7xl md:text-[6.5rem] leading-tight font-extrabold">
                SSGrip8Go
              </h1>
              <p class="text-lg text-ssgrip-silver/80 leading-relaxed max-w-xl pt-2">
                Track-bred steering wheels, hand-trimmed in limited batches for drivers who demand instinctive control.
              </p>
            </div>
            
            <!-- Stats + CTA -->
            <div class="space-y-6">
              <div class="grid grid-cols-2 gap-4 text-sm uppercase tracking-wide text-ssgrip-silver/70 max-w-md">
                <div>
                  <p class="text-3xl font-bold text-white"><%= @total_orders %></p>
                  <p class="text-xs mt-2">Orders fulfilled</p>
                </div>
                <div>
                  <p class="text-3xl font-bold text-white"><%= @total_products %></p>
                  <p class="text-xs mt-2">Products Available</p>
                </div>
              </div>

              <%= link_to catalog_path, class: "group relative inline-flex items-center justify-center gap-3 px-8 py-4 bg-white text-ssgrip-darkest font-bold text-base tracking-wide rounded-lg overflow-hidden transition-all duration-300 hover:bg-ssgrip-accent hover:scale-105 hover:shadow-2xl hover:shadow-white/20" do %>
                <span class="relative z-10">Browse Catalog</span>
                <svg class="relative z-10 w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"/>
                </svg>
                <div class="absolute inset-0 bg-gradient-to-r from-ssgrip-accent/0 via-ssgrip-accent/20 to-ssgrip-accent/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2">
        <div class="animate-bounce">
          <div class="w-5 h-8 rounded-full border border-ssgrip-silver/20 flex items-start justify-center pt-1.5">
            <div class="w-1 h-2 bg-ssgrip-silver/40 rounded-full animate-pulse"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Product Showcase with Margin -->
  <div class="relative mx-auto max-w-6xl px-6 py-24 mt-16">
    <% if @new_arrivals.present? && @new_arrivals.first %>
      <% featured = @new_arrivals.first %>
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Image side -->
        <% featured_image = featured.primary_image %>
        <div class="relative group">
          <div class="absolute -inset-4 bg-gradient-to-r from-ssgrip-accent/20 to-ssgrip-silver/20 rounded-2xl blur-2xl opacity-50 group-hover:opacity-75 transition-opacity"></div>
          <div class="relative aspect-square rounded-xl overflow-hidden bg-ssgrip-darker border border-ssgrip-silver/10">
            <% if featured_image.present? %>
              <img src="<%= featured_image %>" alt="<%= featured.name %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700">
            <% else %>
              <div class="w-full h-full flex items-center justify-center">
                <svg class="w-24 h-24 text-ssgrip-silver-dark opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <circle cx="12" cy="12" r="10" stroke-width="2"/>
                  <circle cx="12" cy="12" r="3" fill="currentColor"/>
                </svg>
              </div>
            <% end %>
          </div>
        </div>
        
        <!-- Content side -->
        <div class="space-y-6">
          <div>
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-ssgrip-accent/10 border border-ssgrip-accent/20 mb-4">
              <svg class="w-3 h-3 text-ssgrip-accent" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              <span class="text-xs font-bold text-ssgrip-accent uppercase tracking-wider">Featured</span>
            </div>
            <h2 class="text-3xl md:text-4xl font-black text-white mb-3"><%= featured.name %></h2>
            <p class="text-ssgrip-silver leading-relaxed"><%= featured.short_description || featured.description %></p>
          </div>
          
          <div class="flex items-baseline gap-3">
            <span class="text-4xl font-black text-white"><%= featured.display_price %></span>
            <% if featured.compare_price? %>
              <span class="text-lg text-ssgrip-silver-dark line-through"><%= number_to_currency(featured.compare_at_price, unit: featured.currency_symbol) %></span>
            <% end %>
          </div>
          
          <div class="flex flex-wrap gap-3">
            <%= link_to product_path(featured), class: "inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-white text-ssgrip-darkest font-semibold hover:bg-ssgrip-accent-bright transition-all group" do %>
              <span>View Details</span>
              <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
            
            <% if featured.in_stock? %>
              <%= form_with url: add_item_basket_path(product_id: featured.id), method: :post, class: "inline-flex" do %>
                <%= hidden_field_tag :quantity, 1 %>
                <button class="inline-flex items-center gap-2 px-6 py-3 rounded-lg border border-ssgrip-silver/30 text-white font-semibold hover:border-ssgrip-silver hover:bg-ssgrip-silver/5 transition-all">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                  </svg>
                  <span>Add to Basket</span>
                </button>
              <% end %>
            <% end %>
          </div>
          
          <!-- Quick specs -->
          <div class="grid grid-cols-3 gap-4 pt-6 border-t border-ssgrip-silver/10">
            <div>
              <div class="text-xs text-ssgrip-silver-dark uppercase tracking-wider mb-1">Material</div>
              <div class="text-sm font-semibold text-white">Carbon Fiber</div>
            </div>
            <div>
              <div class="text-xs text-ssgrip-silver-dark uppercase tracking-wider mb-1">Diameter</div>
              <div class="text-sm font-semibold text-white">350mm</div>
            </div>
            <div>
              <div class="text-xs text-ssgrip-silver-dark uppercase tracking-wider mb-1">Stock</div>
              <div class="text-sm font-semibold text-green-400"><%= featured.in_stock? ? 'Available' : 'Pre-Order' %></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Reviews Section -->
  <div id="reviews" class="relative mx-auto max-w-6xl px-6 py-20">
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-10">
      <div class="space-y-3 max-w-2xl">
        <p class="text-xs uppercase tracking-[0.4em] text-ssgrip-silver/60">Owner Voices</p>
        <h2 class="text-3xl md:text-4xl font-black text-white">Real drivers. Honest impressions.</h2>
        <p class="text-ssgrip-silver">Every review comes from a verified SSGrip owner. One account, one review—so you only read authentic experiences.</p>
      </div>
      <div class="flex gap-3">
        <%= link_to 'All reviews', reviews_path, class: "inline-flex items-center gap-2 px-5 py-3 rounded-xl border border-ssgrip-silver/20 text-white hover:border-white transition-all" %>
        <% if user_signed_in? %>
          <% if current_user.review.present? %>
            <%= link_to 'Update my review', reviews_path(anchor: 'all-reviews'), class: "inline-flex items-center gap-2 px-5 py-3 rounded-xl bg-white text-ssgrip-darkest font-semibold hover:bg-ssgrip-accent transition-all" %>
          <% else %>
            <%= link_to 'Leave a review', reviews_path(anchor: 'all-reviews'), class: "inline-flex items-center gap-2 px-5 py-3 rounded-xl bg-white text-ssgrip-darkest font-semibold hover:bg-ssgrip-accent transition-all" %>
          <% end %>
        <% else %>
          <%= link_to 'Leave a review', reviews_path, class: "inline-flex items-center gap-2 px-5 py-3 rounded-xl bg-white text-ssgrip-darkest font-semibold hover:bg-ssgrip-accent transition-all" %>
        <% end %>
      </div>
    </div>

    <% if @reviews.any? %>
      <div class="grid gap-6 md:grid-cols-2">
        <%= render partial: 'reviews/review_card', collection: @reviews, as: :review %>
      </div>
    <% else %>
      <div class="border border-dashed border-ssgrip-silver/30 rounded-2xl p-10 text-center">
        <p class="text-white text-xl font-semibold mb-2">No reviews yet</p>
        <p class="text-ssgrip-silver">Be the first SSGrip owner to share your experience.</p>
      </div>
    <% end %>
  </div>

  <!-- FAQ Section -->
  <div id="faq" class="relative mx-auto max-w-4xl px-6 py-20">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-black text-white mb-3">Frequently Asked Questions</h2>
      <p class="text-ssgrip-silver">Everything you need to know about our steering wheels</p>
    </div>
    
    <div class="space-y-3">
      <!-- FAQ Item 1 -->
      <details class="group rounded-lg border border-ssgrip-silver/10 bg-ssgrip-darker/30 hover:border-ssgrip-silver/20 transition-all">
        <summary class="flex items-center justify-between cursor-pointer p-5 font-semibold text-white">
          <span>What materials are your steering wheels made from?</span>
          <svg class="w-5 h-5 text-ssgrip-silver group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </summary>
        <div class="px-5 pb-5 pt-2 text-ssgrip-silver text-sm leading-relaxed border-t border-ssgrip-silver/5 mt-3">
          Our steering wheels are crafted from premium materials including Alcantara suede, carbon fiber, genuine Nappa leather, and wood trim. Each wheel undergoes rigorous quality control to ensure durability and comfort.
        </div>
      </details>

      <!-- FAQ Item 2 -->
      <details class="group rounded-lg border border-ssgrip-silver/10 bg-ssgrip-darker/30 hover:border-ssgrip-silver/20 transition-all">
        <summary class="flex items-center justify-between cursor-pointer p-5 font-semibold text-white">
          <span>How long does shipping take?</span>
          <svg class="w-5 h-5 text-ssgrip-silver group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </summary>
        <div class="px-5 pb-5 pt-2 text-ssgrip-silver text-sm leading-relaxed border-t border-ssgrip-silver/5 mt-3">
          We dispatch all in-stock orders within 48 hours. UK delivery typically takes 2-3 business days, while international shipping varies by destination (5-10 business days).
        </div>
      </details>

      <!-- FAQ Item 3 -->
      <details class="group rounded-lg border border-ssgrip-silver/10 bg-ssgrip-darker/30 hover:border-ssgrip-silver/20 transition-all">
        <summary class="flex items-center justify-between cursor-pointer p-5 font-semibold text-white">
          <span>Will this fit my car?</span>
          <svg class="w-5 h-5 text-ssgrip-silver group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </summary>
        <div class="px-5 pb-5 pt-2 text-ssgrip-silver text-sm leading-relaxed border-t border-ssgrip-silver/5 mt-3">
          Most of our wheels are universal fit with standard 6-bolt or quick-release patterns. Each product page includes fitment information and our support team is available to help ensure compatibility with your vehicle.
        </div>
      </details>

      <!-- FAQ Item 4 -->
      <details class="group rounded-lg border border-ssgrip-silver/10 bg-ssgrip-darker/30 hover:border-ssgrip-silver/20 transition-all">
        <summary class="flex items-center justify-between cursor-pointer p-5 font-semibold text-white">
          <span>Do you offer installation services?</span>
          <svg class="w-5 h-5 text-ssgrip-silver group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </summary>
        <div class="px-5 pb-5 pt-2 text-ssgrip-silver text-sm leading-relaxed border-t border-ssgrip-silver/5 mt-3">
          While we don't provide installation services directly, we include comprehensive installation guides with every wheel and can recommend trusted installers in your area. Installation is typically straightforward and can be done in under an hour.
        </div>
      </details>

      <!-- FAQ Item 5 -->
      <details class="group rounded-lg border border-ssgrip-silver/10 bg-ssgrip-darker/30 hover:border-ssgrip-silver/20 transition-all">
        <summary class="flex items-center justify-between cursor-pointer p-5 font-semibold text-white">
          <span>What is your return policy?</span>
          <svg class="w-5 h-5 text-ssgrip-silver group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </summary>
        <div class="px-5 pb-5 pt-2 text-ssgrip-silver text-sm leading-relaxed border-t border-ssgrip-silver/5 mt-3">
          We offer a 30-day return policy on all unused steering wheels in their original packaging. If you're not completely satisfied, contact our support team to initiate a return. Custom or modified wheels are not eligible for return.
        </div>
      </details>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <p class="text-ssgrip-silver mb-4">Still have questions?</p>
      <%= link_to catalog_path, class: "inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-white text-ssgrip-darkest font-semibold hover:bg-ssgrip-accent-bright transition-all" do %>
        <span>Browse Catalog</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      <% end %>
    </div>
  </div>

  <!-- Modern Footer -->
  <footer class="border-t border-ssgrip-silver/10 mt-20">
    <div class="max-w-6xl mx-auto px-6 py-12">
      <div class="grid md:grid-cols-4 gap-8 mb-12">
        <!-- Brand Column -->
        <div class="md:col-span-2">
          <div class="mb-4">
            <img src="/assets/images/logo.png" alt="SSGrip8o" class="h-8 w-auto object-contain">
          </div>
          <p class="text-sm text-ssgrip-silver leading-relaxed mb-4">
            Premium aftermarket steering wheels for driving enthusiasts. Quality, performance, and style in every product.
          </p>
          <!-- Social Links -->
          <div class="flex gap-3">
            <a href="#" class="w-9 h-9 rounded-lg bg-ssgrip-silver/5 hover:bg-ssgrip-silver/10 flex items-center justify-center transition-colors border border-ssgrip-silver/10">
              <svg class="w-4 h-4 text-ssgrip-silver" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="#" class="w-9 h-9 rounded-lg bg-ssgrip-silver/5 hover:bg-ssgrip-silver/10 flex items-center justify-center transition-colors border border-ssgrip-silver/10">
              <svg class="w-4 h-4 text-ssgrip-silver" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073z"/>
              </svg>
            </a>
            <a href="#" class="w-9 h-9 rounded-lg bg-ssgrip-silver/5 hover:bg-ssgrip-silver/10 flex items-center justify-center transition-colors border border-ssgrip-silver/10">
              <svg class="w-4 h-4 text-ssgrip-silver" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Quick Links -->
        <div>
          <h4 class="text-sm font-bold text-white mb-4 uppercase tracking-wider">Quick Links</h4>
          <ul class="space-y-2">
            <li><%= link_to 'Catalog', catalog_path, class: "text-sm text-ssgrip-silver hover:text-white transition-colors" %></li>
            <li><%= link_to 'FAQ', root_path(anchor: 'faq'), class: "text-sm text-ssgrip-silver hover:text-white transition-colors" %></li>
            <% if user_signed_in? %>
              <li><%= link_to 'Orders', orders_path, class: "text-sm text-ssgrip-silver hover:text-white transition-colors" %></li>
              <li><%= link_to 'Dashboard', dashboard_path, class: "text-sm text-ssgrip-silver hover:text-white transition-colors" %></li>
            <% else %>
              <li><%= link_to 'Login', login_path, class: "text-sm text-ssgrip-silver hover:text-white transition-colors" %></li>
            <% end %>
          </ul>
        </div>

        <!-- Support -->
        <div>
          <h4 class="text-sm font-bold text-white mb-4 uppercase tracking-wider">Support</h4>
          <ul class="space-y-2">
            <li><a href="#" class="text-sm text-ssgrip-silver hover:text-white transition-colors">Contact Us</a></li>
            <li><a href="#" class="text-sm text-ssgrip-silver hover:text-white transition-colors">Shipping Info</a></li>
            <li><a href="#" class="text-sm text-ssgrip-silver hover:text-white transition-colors">Returns</a></li>
            <li><a href="#" class="text-sm text-ssgrip-silver hover:text-white transition-colors">Installation Guide</a></li>
          </ul>
        </div>
      </div>

      <!-- Bottom Bar -->
      <div class="pt-8 border-t border-ssgrip-silver/10 flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-sm text-ssgrip-silver-dark">© 2024 SSGrip8o. All rights reserved.</p>
        <div class="flex gap-6">
          <a href="#" class="text-xs text-ssgrip-silver-dark hover:text-ssgrip-silver transition-colors">Privacy Policy</a>
          <a href="#" class="text-xs text-ssgrip-silver-dark hover:text-ssgrip-silver transition-colors">Terms of Service</a>
        </div>
      </div>
    </div>
  </footer>
</section>

